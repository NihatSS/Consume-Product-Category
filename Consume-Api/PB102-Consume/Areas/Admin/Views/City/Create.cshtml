@model CityCreateVM

<div class="container mt-5">
    <h1 class="text-center">Create City</h1>
</div>
<form class="mt-3" asp-controller="City" asp-action="Create" method="post">
    <div class="form-group">
        <label for="city">City Name</label>
        <input asp-for="Name" class="form-control" id="city">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label for="countryId">Country ID</label>
        <input asp-for="CountryId" class="form-control" id="countryId" type="number">
        <span class="text-danger" asp-validation-for="CountryId"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
