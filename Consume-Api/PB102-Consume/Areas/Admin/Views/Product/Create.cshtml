@model ProductCreateVM

<div class="container mt-5">
    <h1 class="text-center">Create Product</h1>
</div>

<form method="post" enctype="multipart/form-data" asp-controller="Product" asp-action="Create">
    <div class="form-group">
        <label for="name">Name</label>
        <input asp-for="Name" class="form-control" id="name">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label for="desc">Description</label>
        <input asp-for="Desc" class="form-control" id="desc"></input>
        <span class="text-danger" asp-validation-for="Desc"></span>
    </div>

    <div class="form-group">
        <label for="price">Price</label>
        <input type="number" asp-for="Price" min="0" class="form-control" id="price">
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>

    <div class="form-group">
        <label for="photos">Photos</label>
        <input type="file" asp-for="Photos" class="form-control" id="photos" multiple>
        <span class="text-danger" asp-validation-for="Photos"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>