@model BookCreateVM
<div class="container mt-5">
    <h1 class="text-center">Book</h1>
</div>
<form class="mt-3" asp-controller="Book" asp-action="Create">
    <div class="form-group">
        <label for="country">Name</label>
        <input asp-for="Name" class="form-control" id="country">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label for="population">Page count</label>
        <input type="number" asp-for="PageCount" min="0" class="form-control" id="population">
        <span class="text-danger" asp-validation-for="PageCount"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>